%{
	#include<stdio.h>
	int count=0, in=0;
%}
%%
"//".*	++count;
"/*"	in=1;
"*/"	{in=0; ++count;}
.	{!in?fprintf(yyout, "%c", yytext[0]):0;}
\n+/(\n|\t)+ ;
%%
int yywrap()
{
	return 1;
}
int main()
{
	FILE *f=fopen("input.c", "r");
	if(!(yyin=f))
	{
		printf("file not found\n");
		return 1;
	}
	yyout=fopen("output.c", "w");
	yylex();
	fprintf(yyout, "//comments=%d\n", count);
	fclose(f);
	fclose(yyout);
	return 0;
}
